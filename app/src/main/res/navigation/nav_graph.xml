<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.UI.Home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_adminFragment"
            app:destination="@id/adminFragment" />
        <action
            android:id="@+id/action_homeFragment_to_attendanceHistoryFragment"
            app:destination="@id/attendanceHistoryFragment" />
        <action
            android:id="@+id/action_homeFragment_to_employeeListFragment"
            app:destination="@id/employeeListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_enrollmentDetailsFragment"
            app:destination="@id/enrollmentDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminFragment"
        android:name="com.UI.Admin.AdminFragment"
        android:label="Admin"
        tools:layout="@layout/fragment_admin" >
        <action
            android:id="@+id/action_adminFragment_to_studentDetailsFragment"
            app:destination="@id/studentDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/attendanceHistoryFragment"
        android:name="com.UI.AttendanceHistory.AttendanceHistoryFragment"
        android:label="Attendance History"
        tools:layout="@layout/fragment_attendance_history" >
        <action
            android:id="@+id/action_attendanceHistoryFragment_to_selectedDateAttendanceFragment"
            app:destination="@id/selectedDateAttendanceFragment" />
    </fragment>
    <fragment
        android:id="@+id/employeeListFragment"
        android:name="com.UI.EmployeeList.EmployeeListFragment"
        android:label="Student"
        tools:layout="@layout/fragment_employee" />
    <fragment
        android:id="@+id/enrollmentDetailsFragment"
        android:name="com.UI.EnrollmentDetails.EnrollmentDetailsFragment"
        android:label="Enrollment Details"
        tools:layout="@layout/fragment_enrollment_details" />
    <fragment
        android:id="@+id/studentDetailsFragment"
        android:name="com.UI.StudentDetails.StudentDetailsFragment"
        android:label="Student Details"
        tools:layout="@layout/fragment_student_details" />
    <fragment
        android:id="@+id/selectedDateAttendanceFragment"
        android:name="com.UI.SelectedDateAttendance.SelectedDateAttendanceFragment"
        android:label="Daily Attendance"
        tools:layout="@layout/fragment_selected_date_attendance" />
</navigation>